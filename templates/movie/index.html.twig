{% extends 'base.html.twig' %}

{% block title %}Топ фильмов{% endblock %}

{% block body %}
    <h1>Топ фильмов</h1>
    {% if movies %}

        {{- ' ' -}}
        {{ form_start(form, {'attr': {'class': 'date-selector' }}) }}
            {{ form_widget(form) }}
            <script type="text/javascript">
                const el = document.getElementById('movie_date')
                el.addEventListener('change', function(e) {
                    el.form.submit();
                });
            </script>
        {{ form_end(form) }}

        <table class="table">
            <thead>
                <tr>
                    <th>Позиция</th>
                    <th>Рейтинг</th>
                    <th>Оригинальное название</th>
                    <th>Год</th>
                    <th>Количество проголосовавших</th>
                </tr>
            </thead>
            <tbody>
            {% for movie in movies %}
                <tr>
                    <td>{{ movie.position }}</td>
                    <td>{{ movie.rating }}</td>
                    <td>{{ movie.title }}</td>
                    <td>{{ movie.year }}</td>
                    <td>{{ movie.count }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <style>

            .date-selector {
                margin-bottom: 20px;
            }
            .table {
                border: 1px solid #eee;
                table-layout: fixed;
                width: 100%;
                margin-bottom: 20px;
            }
            .table th {
                font-weight: bold;
                padding: 5px;
                background: #efefef;
                border: 1px solid #dddddd;
            }
            .table td {
                padding: 5px 10px;
                border: 1px solid #eee;
                text-align: left;
            }
            .table tbody tr:nth-child(odd){
                background: #fff;
            }
            .table tbody tr:nth-child(even){
                background: #F7F7F7;
            }
        </style>
    {% endif %}

{% endblock %}
